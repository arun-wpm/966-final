// distribution of scores after a hit (3 cards total)
var model = function() {
  initCards()
  var dealerSequence = getTwoCards()
  var playerSequence = getTwoCards()
  score(generateFrom(playerSequence, drawThreeStrategy))
}
viz(Infer({method: 'MCMC', samples: 200000}, model))

